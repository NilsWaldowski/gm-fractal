<div class="c-form__group">

    <label class="c-form__label {{#if fieldTextHideLabel}}h-accessibility{{/if}}" for="input-text-label-1">
        {{#if fieldTextLabel}}
            {{fieldTextLabel}}{{#if fieldTextRequired}}*{{/if}}
        {{else}}
            Label for Field{{#if fieldTextRequired}}*{{/if}}
        {{/if}}
    </label>

    <div class="c-form__input-container">
        <input
            id="input-text-label-1"
            type="text"
            placeholder="{{#if fieldTextPlaceholder}}{{fieldTextPlaceholder}}{{#if fieldTextRequired}}*{{/if}}{{ else }}Text Input{{#if fieldTextRequired}}*{{/if}}{{/if}}"
            class="c-form__input {{#if fieldTextIcon }}js-form__input--date{{/if}}"
            {{#if fieldTextRequired}}required{{/if}}
            />

        {{# fieldTextIcon }}
            <div class="c-form__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25"><path d="M11.3 11.3h2.5v2.5h-2.5zm4 0h2.5v2.5h-2.5zm4 0h2.5v2.5h-2.5zm-8 4h2.5v2.5h-2.5zm4 0h2.5v2.5h-2.5zm4 0h2.5v2.5h-2.5zm-16 0h2.5v2.5H3.3zm4 0h2.5v2.5H7.3zm4 4h2.5v2.5h-2.5zm4 0h2.5v2.5h-2.5zm-12 0h2.5v2.5H3.3zm4 0h2.5v2.5H7.3z"/><path d="M21.8 3.1v3.1h-3.2V3.1h-12v3.1H3.3V3.1H0V25h25V3.1h-3.2zm1.5 20.2H1.8V9.8h21.5v13.5zM3.3 0h3.2v3.1H3.3zm15.2 0h3.2v3.1h-3.2z"/></svg>
            </div>
        {{/ fieldTextIcon }}
    </div>

    {{# fieldTextMsg }}
        <p class="c-form__msg">
            {{# fieldTextRequired }}<span class="c-form__required">*</span>{{/ fieldTextRequired }}{{ fieldTextMsg }}
        </p>
    {{/ fieldTextMsg }}

</div>
