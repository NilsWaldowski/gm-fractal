<html lang="de" class="{{ htmlClass }}">
<!-- #endif -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Preview Layout</title>

    <!-- Meta Tags / Social Sharing / Annotations -->
    {{render '@meta-tags' additionalData merge=true}}

    <!-- Prefetching, preloading, prebrowsing -->
    <link rel="prefetch" href="/typo3conf/ext/bc_sitepackage/Resources/Public/_Default/icons/sprite/sprite.svg">

    <!-- Inline: Above the fold inline CSS -->
    <!-- link href='{{ path '/typo3conf/ext/gm8_sitepackage/Resources/Public/_Default/Frontend/stylesheets/screen.css' }}' rel='stylesheet' type='text/css' -->

    <!-- NO JS CSS Include Fallback -->
    <noscript>
        <link href='{{ path '/typo3conf/ext/gm8_sitepackage/Resources/Public/_Default/Frontend/stylesheets/screen.css' }}' rel='stylesheet' type='text/css'>
    </noscript>

    <!-- Inline: Modernizr -->
    <script src="{{ path '/typo3conf/ext/gm8_sitepackage/Resources/Public/_Default/Frontend/javascript-inline/modernizr-custom.js' }}"></script>

    <!-- Inline: Cookie Helper Lib -->
